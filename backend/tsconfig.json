{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
  },
  "include": ["src/**/*", "types/**/*"]
}
